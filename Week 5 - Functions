#Practice 2
while True:
    try:
        userAge = int(input("What is your age?"))
        if 0<= userAge <= 17:
            print("You are a Child!!")
            break
        if 18 <= userAge <= 64:
            print("You are an Adult!!")
            break
        if 65 <= userAge:
            print("You are a Pensioner!!!")
    except ValueError:
        print("Only whole numbers. Try Again")

#Pratice 3
import random

randomNumber = random.randint(1, 100)
while True:
    try:
        userGuess = int(input("Guess the Number:"))
        if randomNumber > userGuess:
            print("Try agiain. Your too low!")
        if randomNumber < userGuess:
            print("Try again. Your too high!")
        if randomNumber == userGuess:
            print("You guessed correctly. The number was" , randomNumber)
            break
    except ValueError:
        print("Only whole numbers. Try Again")

#Practice 4
i = 1

for i in range(13):
    x = 12 * i
    print(f"12 * {i} = {x}")

#Practce 5
print("Menu")
print("1. Pasta")
print("2.Pizza")
print("3.Burger")
print("4.Chicken Nuggets")
print("5.Salad")
while True:
    try:
        userOrder = int(input("What would you like to order? Use the Numbers above"))
        if userOrder == 1:
            print("You have ordered Pasta!")
            break
        if userOrder == 2:
            print("You have ordered Pizza!")
            break
        if userOrder == 3:
            print("You have ordered a Burger")
            break
        if userOrder == 4:
            print("You have ordered Chinken Nuggets")
            break
        if userOrder == 5:
            print("You have ordered a Salad")
            break
        else:
            print("Please pick within the range please.")
    except ValueError:
        print("Numbers within range please.")